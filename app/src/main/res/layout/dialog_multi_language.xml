<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
           app:cardBackgroundColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_25sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:visibility="gone"
                        android:id="@+id/iv_dialogcancel"
                        android:layout_gravity="right"
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_cross"
                        android:layout_height="wrap_content">
                    </androidx.appcompat.widget.AppCompatImageView>


                    <com.example.mvvmarchitechre.utility.customfont.BoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose language"
                        android:textColor="@color/purple_200"
                        android:textSize="@dimen/_16sdp"
                        android:textAlignment="viewStart"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/_13sdp"
                        tools:ignore="RtlCompat" />

                    <RadioGroup
                        android:id="@+id/language_radio_group"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_english"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_42sdp"
                            android:button="@null"
                            android:text="English"
                            android:background="@drawable/radiobutton_selector"
                            android:paddingStart="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp"
                            android:checked="true"
                            android:textColor="@color/black"
                            android:textAlignment="viewStart"
                           />

                        <androidx.appcompat.widget.AppCompatRadioButton
                           android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/rb_arabic"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_42sdp"
                            android:button="@null"
                            android:background="@drawable/radiobutton_selector"
                            android:text="arabic"
                            android:textColor="@color/black"
                            android:textAlignment="viewStart"
                            android:paddingStart="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp"
                            />

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/rb_chinese"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_42sdp"
                            android:button="@null"
                            android:background="@drawable/radiobutton_selector"
                            android:text="Chinese"
                            android:textColor="@color/black"
                            android:textAlignment="viewStart"
                            android:paddingStart="@dimen/_15sdp"
                            android:textSize="@dimen/_13sdp"
                            />


                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_45sdp"
                            android:layout_marginLeft="@dimen/_45sdp"
                            android:background="@drawable/bg_gray_button"
                            android:id="@+id/btn_save"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="@dimen/_15sdp"
                            android:paddingTop="@dimen/_3sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_width="match_parent"
                            android:text="Save"
                            />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
